.container
  .page-header
    %h1= t('welcome.title', project: t('project'))

  %p= t('configuration.description', project: t('project'))

  %form.form-horizontal{role: "form"}
    .form-group
      %label.col-sm-2.control-label{for: "url"} URL
      .col-sm-10
        %input#name.form-control{name: "url", placeholder: "http://localhost:3000", type: "text"}
    .form-group
      %label.col-sm-2.control-label{for: "name"} Pod Name
      .col-sm-10
        %input#name.form-control{name: "name", placeholder: "Diaspora*", type: "text"}

    .form-group
      %label.col-sm-2.control-label{for: "registration_enabled"} Enable Registrations
      .col-sm-10
        %input#email.form-control{name: "registration_enabled", type: "checkbox"}
    .form-group
      %label.col-sm-2.control-label{for: "chat_enabled"} Enable Chat
      .col-sm-10
        %input#email.form-control{name: "chat_enabled", type: "checkbox"}
    .form-group
      %label.col-sm-2.control-label{for: "camo_enabled"} Enable Camo
      .col-sm-10
        %input#email.form-control{name: "camo_enabled", type: "checkbox"}

    .form-group
      %label.col-sm-2.control-label{for: "welcome_message"} Welcome Message
      .col-sm-10
        %textarea.form-control{name: "welcome_message", rows: "4"} Hello %{username}, welcome to diaspora.

    .form-group
      .col-sm-10.col-sm-offset-2
        %input#submit.btn.btn-primary{:name => "submit", :type => "submit", :value => "Send"}
